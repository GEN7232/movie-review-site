<div class="posts">
  {{#each posts as |post| }}
  <div class="review">
    <div class="new-review">
      <h2> Movie:
        <a class="titles" href="/posts/{{post.id}}">{{post.title}}</a>
      </h2>
      <p><strong>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div>
      <p>
        <strong>Review: </strong>{{post.review}}
      </p>
    </div>
  </div>
  <div class="comment">
    <form class="new-comment-form">
      <input type="text" name="comment-text" id="comment-text">
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
  {{/each}}
</div>