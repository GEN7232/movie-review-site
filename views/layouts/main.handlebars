<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie reviews</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div>
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <a href="/">
            <img id="logo" style="width: 200px" src="/img/imdME-logo.png" alt="imdME logo">
        </a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">
          <button id="profile">Profile</button>
        <button class="no-button" id="logout">Logout</button>
        <a href="/posts">
          <button class="no-button" id="reviews">Reviews</button>
        </a>
        {{else}}
        <a href="/login">
          <button class="no-button" id="login">Profile</button>
        </a>
        {{/if}} 
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
